<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.landsem.canboxui.view.TempWaveView
        android:id="@+id/waterTankTempItem_tempWaveView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/waterTankTempItem_tempWaveView"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/outSideTemp"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/titleTextSize" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.landsem.canboxui.view.ColorTextView
                android:id="@+id/waterTankTempItem_tempValueCTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/valueBigTextSize" />

            <com.landsem.canboxui.view.ColorTextView
                android:id="@+id/waterTankTempItem_unitCTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/nonSupport"
                android:textSize="@dimen/valueSmallTextSize" />
        </LinearLayout>
    </LinearLayout>

</merge>