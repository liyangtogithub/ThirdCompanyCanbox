<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.landsem.canboxui.view.SettingItemCheckboxView
            android:id="@+id/airConditionarBindAuto"
            style="@style/SettingItemStyle"
            android:text="@string/AirConditionarBindAuto" />

        <com.landsem.canboxui.view.SettingItemCheckboxView
            android:id="@+id/indoorOutdoorGasBindAuto"
            style="@style/SettingItemStyle"
            android:text="@string/IndoorOutdoorGasBindAuto" />

        <com.landsem.canboxui.view.SettingItemView
            android:id="@+id/backCarCameraOrbit"
            style="@style/SettingItemStyle"
            android:text="@string/BackCarCameraOrbit" />

        <com.landsem.canboxui.view.SettingItemView
            android:id="@+id/carTypeConfig"
            style="@style/SettingItemStyle"
            android:text="@string/CarTypeConfig" />
    </LinearLayout>

</ScrollView>