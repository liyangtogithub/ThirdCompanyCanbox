<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/frontWindowDemist_IV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/air_front_demist_disable" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/airFrontWindowDemist"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/titleTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/air_padding_division"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/backWindowDemist_IV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/air_back_demist_disable" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/airBackWindowDemist"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/titleTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/air_padding_division"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/CyclicMode_IV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/air_cyclic_mode_in" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/airCyclicMode"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/titleTextSize" />
    </LinearLayout>

</LinearLayout>