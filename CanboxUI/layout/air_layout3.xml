<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/RightWindMode_IV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/air_wind_tono" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/airRightWindMode"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/titleTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/air_padding_division"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/rightHotMode_IV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/air_seat_hot0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/airRightSeatHot"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/titleTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/air_padding_division"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/rightWindGrade_IV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/air_wind_grade0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/airRightWindGrade"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/titleTextSize" />
    </LinearLayout>

</LinearLayout>
